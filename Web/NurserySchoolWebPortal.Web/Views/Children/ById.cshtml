@model NurserySchoolWebPortal.Web.ViewModels.Children.ChildViewModel

<link href="~/css/child.css" rel="stylesheet">

<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<div class="container emp-profile">
    <form method="post">
        <div class="row">
            <div class="col-md-4">
                <div class="profile-img">
                    @if (Model.Gender == 1)
                    {
                        <img src="https://image.shutterstock.com/image-illustration/cartoon-character-little-boy-points-260nw-1550040197.jpg" alt="boy pic" />
                    }
                    else if (Model.Gender == 2)
                    {
                        <img src="https://image.shutterstock.com/image-vector/happy-african-american-girl-cartoon-260nw-522003124.jpg" alt="girl pic" />
                    }
                </div>
            </div>
            <div class="col-md-6">
                <div class="profile-head">
                    <h5>
                        @Model.FirstName @Model.MiddleName @Model.LastName
                    </h5>
                    <h6>
                        @Model.SchoolName Nursery School
                    </h6>
                    <p class="proile-rating">STARS : <span>8/10</span></p>
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Personal Info</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#pr" role="tab" aria-controls="pr" aria-selected="false">Fees</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="profile-work">
                    <p>Parent Info</p>
                    <a href="">@Model.ParentName</a><br />
                    <a href="">@Model.Email</a><br />
                    <a href="">@Model.PhoneNumber</a>
                </div>
            </div>
            <div class="col-md-8">
                <div class="tab-content profile-tab" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <div class="row">
                            <div class="col-md-6">
                                <label>First Name</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.FirstName</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Middle Name</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.MiddleName</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Last Name</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.LastName</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Date of Birth</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.DateOfBirth</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Address</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.Address</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Nursery School</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.SchoolName</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Nursery Group</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.GroupName</p>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                        <div class="row">
                            <div class="col-md-6">
                                <label>Height(cm)</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.Height</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Weight(kg)</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.Weight</p>
                            </div>
                        </div>
                        @*<div class="row">
                            <div class="col-md-6">
                                <label>Immunizations</label>
                            </div>
                            foreach (var immunization in Model.PersonalInfo.Immunizations)
                            {
                            <div class="col-md-6">
                                <p>Model.PersonalInfo.Immunizations.Name-Model.PersonalInfo.Immunizations.Date</p>
                            </div>
                            }
                        </div>*@
                    </div>
                    <div class="tab-pane fade" id="pr" role="tabpanel" aria-labelledby="pr-tab">
                        <div class="row">
                            <div class="col-md-6">
                                <label>Title</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.FeeTitle</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>From</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.FeeDateFrom</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>To</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.FeeDateTo</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Fee</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.FeeMoneyAmount</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>







