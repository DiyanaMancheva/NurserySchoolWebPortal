@using NurserySchoolWebPortal.Common
@{
    this.ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to @GlobalConstants.NurserySchoolsName!</h1>
    <p>
        A place where children's rhythms are caugth and given warm response. A sense that we had created a home away from home.
        A place where children are accepted with love.
    </p>
</div>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="https://www.sanct-bernhard.com/temp/thumbnails/kinder-9a6ab.jpg">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://www.guardmesecurity.com/wp-content/uploads/2014/09/kids-playing.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://copakids.com/wp-content/uploads/2020/06/Childs-Doctor.jpg" alt="Third slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://copakids.com/wp-content/uploads/2020/07/pediatrician_bend_redmond.jpg" alt="Fourth slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://www.siparent.com/wp-content/uploads/2020/06/boys-learning-diversity-880x350.jpg" alt="Fifth slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>




