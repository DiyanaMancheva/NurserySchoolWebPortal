@model NurserySchoolWebPortal.Web.ViewModels.Menu.MenuInputModel
@{
    ViewData["Title"] = "Create";
}
<h1>Create</h1>
<h4>Menu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
